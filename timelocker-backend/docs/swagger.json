                "chain_id": {
                    "type": "integer"
                },
                "created_at": {
                    "type": "string"
                },
                "last_login": {
                    "type": "string"
                },
                "preferences": {
                    "$ref": "#/definitions/types.JSONB"
                },
                "wallet_address": {
                    "type": "string"
                }
            }
        },
        "types.WalletConnectRequest": {
            "type": "object",
