# TimeLocker Backend 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ================================
# 服务器配置
# ================================
SERVER_PORT=8080
SERVER_MODE=release

# ================================
# 数据库配置
# ================================
POSTGRES_DB=timelocker_db
POSTGRES_USER=timelocker
POSTGRES_PASSWORD=your_strong_postgres_password_here

# ================================
# Redis 配置
# ================================
REDIS_PASSWORD=your_redis_password_here

# ================================
# JWT 配置
# ================================
JWT_SECRET=your_very_strong_jwt_secret_key_here_at_least_32_characters
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=48h

# ================================
# RPC 配置 (区块链节点访问)
# ================================
# Alchemy API Key (推荐)
RPC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (备选)
RPC_INFURA_API_KEY=your_infura_api_key_here

# RPC 提供商选择 (alchemy 或 infura)
RPC_PROVIDER=alchemy

# 是否包含测试网 (true/false)
RPC_INCLUDE_TESTNETS=true

# ================================
# 邮件服务配置
# ================================
EMAIL_SMTP_HOST=smtp.zoho.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=gm@timelock.live
EMAIL_SMTP_PASSWORD=your_email_app_password_here
EMAIL_FROM_NAME=TimeLocker Notification
EMAIL_FROM_EMAIL=gm@timelock.live
EMAIL_VERIFICATION_CODE_EXPIRY=5m
EMAIL_URL=https://timelock.live

# ================================
# 扫链系统配置 (高级配置，通常不需要修改)
# ================================
SCANNER_RPC_TIMEOUT=20s
SCANNER_RPC_RETRY_MAX=10
SCANNER_RPC_RETRY_DELAY=10s
SCANNER_SCAN_BATCH_SIZE=100
SCANNER_SCAN_INTERVAL=30s
SCANNER_SCAN_INTERVAL_SLOW=30s
SCANNER_SCAN_CONFIRMATIONS=3
SCANNER_FLOW_REFRESH_INTERVAL=90s
SCANNER_FLOW_REFRESH_BATCH_SIZE=100

# ================================
# 备份系统配置
# ================================
BACKUP_RETENTION_DAYS=30
MAX_BACKUPS=50
BACKUP_PREFIX=timelocker_auto
